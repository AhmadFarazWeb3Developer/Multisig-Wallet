{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    "blockchain-interaction/helper/provider.tsx",
    "blockchain-interaction/helper/Auth.tsx",
    "blockchain-interaction/hooks/factory/useWriteFactory.js",
    "blockchain-interaction/hooks/factory/useReadSingletonFactory.s",
    "blockchain-interaction/helper/useConstants.js",
    "blockchain-interaction/helper/provider.js",
    "blockchain-interaction/helper/auth.js",
    "hooks/useGetQueuedTxs.js"
  ],
  "exclude": ["node_modules"]
}
